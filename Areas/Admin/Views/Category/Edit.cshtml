@model Category
<form method="post">
    <input type="hidden" asp-for="CategoryId" />
    <div class="border pt-3 mt-4">
        <div class="row pb-4">
            <h2 class="text-primary"> Edit Category</h2>
            <hr />

        </div>
        @*   <div asp-validation-summary="All"></div> *@
        <div class=" row mb-3 p-1">
            <label asp-for=Name class="p-0"></label>
            <input asp-for=Name class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
        <div class="row mb-3 p-1">
            <label asp-for=DesplayOrder class="p-0"></label>
            <input asp-for=DesplayOrder class="form-control" />
            <span asp-validation-for="DesplayOrder" class="text-danger"></span>


        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control"> Update </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">Back To list</a>
            </div>
        </div>


    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}